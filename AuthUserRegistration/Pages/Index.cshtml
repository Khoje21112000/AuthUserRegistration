@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=872&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); /* Adjust the path to your image */
            background-size: cover; /* Cover ensures the image covers the entire background */
            background-position: center; /* Center the background image */
            background-repeat: no-repeat; /* Prevent background image from repeating */
            padding: 20px; /* Optional padding for content */
            margin: 0; /* Remove default margin for full width */
        }

        .text-center {
            margin-top: 100px; /* Adjust top margin to center content vertically */
        }

        .display-4 {
            color: #fff; /* Optional: Adjust text color for better readability against background */
        }

        .links {
            margin-top: 20px; /* Optional: Adjust spacing between links */
        }

            .links a {
                display: block;
                margin-bottom: 10px; /* Optional: Adjust spacing between links */
                color: #fff; /* Optional: Adjust link text color */
                text-decoration: none; /* Optional: Remove underline */
            }

                .links a:hover {
                    text-decoration: underline; /* Optional: Add underline on hover */
                }
    </style>
</head>
<body>

    <div class="text-center">
        <h1 class="display-4">Welcome to KK's World</h1>
    </div>

    <div class="links text-center">
        <a href="/User">User</a>
        <a href="/Admin">Admin</a>
        <a href="/Client">Client</a>
    </div>

</body>
</html>
